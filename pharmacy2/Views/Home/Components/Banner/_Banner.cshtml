@model List<BE.Banner>

<div class="intro-section bg-lighter pt-5 pb-6">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="intro-slider-container slider-container-ratio slider-container-1 mb-2 mb-lg-0">
                    <div class="intro-slider intro-slider-1 owl-carousel owl-simple owl-light owl-nav-inside"
                         data-toggle="owl" data-owl-options='{
                                            "nav": false, 
                                            "rtl": true, 
                                "responsive": {
                                                "768": {
                                                    "nav": true
                                                }
                                            }
                                        }'>
                        <div class="intro-slide">
                            @foreach(var item in Model)
                            {
                                @if (@item.Name == "first"&&@item.State==true)
                                {
                                    <figure class="slide-image">
                                        <picture>
                                            <source media="(max-width: 480px)"
                                                    srcset="~/images/banner/@item.Image">
                                            <img src="~/images/banner/@item.Image" alt="Image Desc">
    
                                        </picture>
                                    </figure>
                                    <!-- End .slide-image -->
    
                                    <div class="intro-content">
                                        <h3 class="intro-subtitle">@item.H4 </h3>
                                        <!-- End .h3 intro-subtitle -->
                                        <h1 class="intro-title">@item.H3</h1>
                                        <!-- End .intro-title -->
    
                                        <a asp-action="Index" asp-controller="Drag" asp-route-Id="@item.DragId" class="btn btn-outline-white">
                                            <i class="icon-long-arrow-left"></i>
                                            <span>خرید</span>
                                        </a>
                                    </div>
                                    <!-- End .intro-content -->
                                }
                            }
                        </div><!-- End .intro-slide -->
    
                        <div class="intro-slide">
                            @foreach (var item in Model)
                            {
                                @if (@item.Name == "second" && @item.State == true)
                                {
                                                
                                    <figure class="slide-image">
                                        <picture>
                                            <source media="(max-width: 480px)"
                                                    srcset="~/images/banner/@item.Image">
                                                       
                                            <img src="~/images/banner/@item.Image" alt="Image Desc">
                                                           
                                        </picture>
                                    </figure>
                                    <!-- End .slide-image -->
    
                                    <div class="intro-content">
                                        <h3 class="intro-subtitle">@item.H4</h3>
                                        <!-- End .h3 intro-subtitle -->
                                        <h1 class="intro-title">@item.H3</h1><!-- End .intro-title -->
    
                                        <a asp-action="Index" asp-controller="Drag" asp-route-Id="@item.DragId" class="btn btn-outline-white">
                                            <i class="icon-long-arrow-left"></i>
                                            <span>خرید</span>
                                        </a>
                                    </div>
                                    <!-- End .intro-content -->
                                }
    
                            }
                        </div><!-- End .intro-slide -->
    
                        <div class="intro-slide">
                            @foreach (var item in Model)
                            {
                                @if (@item.Name == "Third" && @item.State == true)
                                {
                                    <figure class="slide-image">
                                        <picture>
                                            <source media="(max-width: 480px)"
                                                    srcset="~/images/banner/@item.Image">
                                                           
                                            <img src="~/images/banner/@item.Image" alt="Image Desc">
                                                            
                                        </picture>
                                    </figure>
                                    <!-- End .slide-image -->
    
                                    <div class="intro-content">
                                        <h3 class="intro-subtitle">@item.H4</h3>
                                        <!-- End .h3 intro-subtitle -->
                                        <h1 class="intro-title">@item.H3</h1>
                                        <!-- End .intro-title -->
    
                                        <a asp-action="Index" asp-controller="Drag" asp-route-Id="@item.DragId" class="btn btn-outline-white">
                                            <i class="icon-long-arrow-left"></i>
                                            <span>خرید</span>
                                        </a>
                                    </div>
                                    <!-- End .intro-content -->
                                }
                            }
                                               
                        </div><!-- End .intro-slide -->
                    </div><!-- End .intro-slider owl-carousel owl-simple -->
    
                    <span class="slider-loader"></span><!-- End .slider-loader -->
                </div><!-- End .intro-slider-container -->
            </div><!-- End .col-lg-8 -->
            <div class="col-lg-4">
                <div class="intro-banners">
                    <div class="row row-sm">
                        @foreach (var item in Model)
                        {
                            @if (@item.Name == "forth" && @item.State == true)
                            {
                                <div class="col-md-6 col-lg-12">
                                    <div class="banner banner-display">
    
                                        <a href="#">
    
                                            <img src="~/images/banner/@item.Image" alt="Banner">
    
    
                                        </a>
                                        <div class="banner-content">
                                            <h4 class="banner-subtitle text-darkwhite">@item.H4<a href="#"></a>
                                            </h4><!-- End .banner-subtitle -->
                                            <h3 class="banner-title text-white">
                                                <a href="#">
                                                </a>@item.H3</h3><!-- End .banner-title -->
                                            <a asp-action="Index" asp-controller="Drag" asp-route-Id="@item.DragId" class="btn btn-outline-white banner-link">خرید
                                                <i
                                                    class="icon-long-arrow-left"></i></a>
                                        </div><!-- End .banner-content -->
                                    </div><!-- End .banner -->
                                </div><!-- End .col-md-6 col-lg-12 -->
                            }}
                                    
                        <div class="col-md-6 col-lg-12">
                            @foreach (var item in Model)
                            {
                                @if (@item.Name == "fifth" && @item.State == true)
                                {
                                    <div class="banner banner-display mb-0">
                                        <a href="#">
                                                    
                                            <img src="~/images/banner/@item.Image" alt="Banner">
    
                                                       
                                        </a>
    
                                        <div class="banner-content">
                                            <h4 class="banner-subtitle text-darkwhite"><a href="#"></a></h4>
                                            <!-- End .banner-subtitle -->
                                            <h3 class="banner-title text-white">
                                                <a href="#">
                                                </a></h3><!-- End .banner-title -->
                                            <a asp-action="Index" asp-controller="Drag" asp-route-Id="@item.DragId" class="btn btn-outline-white banner-link">خرید
                                                <i
                                                    class="icon-long-arrow-left"></i></a>
                                        </div><!-- End .banner-content -->
                                    </div><!-- End .banner -->
                                }
                            }
                        </div>
                        <!-- End .col-md-6 col-lg-12 -->
                                    
                    </
                    div><!-- End .row row-sm -->
                </div><!-- End .intro-banners -->
            </div><!-- End .col-lg-4 -->
        </div><!-- End .row -->
    
        <div class="mb-6"></div><!-- End .mb-6 -->
    
        <div class="owl-carousel owl-simple" data-toggle="owl" data-owl-options='{
                                "nav": false, 
                                "dots": false,
                                "margin": 30,
                                "loop": false,
                                "rtl": true, 
