@model List<BE.Brand>

<div class="intro-section bg-lighter pt-5 pb-6">
    <div class="container">
        <div class="mb-6"></div><!-- End .mb-6 -->
        <div class="owl-carousel owl-simple" data-toggle="owl" data-owl-options='{
                            "nav": false, 
                            "dots": false,
                            "margin": 30,
                            "loop": false,
                            "rtl": true, 
                            "responsive": {
                                "0": {
                                    "items":2
                                },
                                "420": {
                                    "items":3
                                },
                                "600": {
                                    "items":4
                                },
                                "900": {
                                    "items":5
                                },
                                "1024": {
                                    "items":6
                                }
                            }
                        }'>
            @foreach (var item in Model)
            {
                <a href="#" title="@item.Name" class="brand">
                    <img src="~/images/daro/@item.Pic" alt="نام برند">
                </a>
            }

        </div><!-- End .owl-carousel -->
    </div><!-- End .container -->
</div><!-- End .bg-lighter -->