@model Catagory_Model
@{
    ViewData["Title"] = "create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section pre{
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="description" content="Materialize is a Material Design Admin Template,It's modern, responsive and based on Material Design by Google.">
    <meta name="keywords" content="materialize, admin template, dashboard template, flat admin template, responsive admin template, eCommerce dashboard, analytic dashboard">
    <meta name="author" content="ThemeSelect">
    <title>متریالایز | الگوی منوی تاریک عمودی | فرم اعتبارسنجی </title>
    <link rel="apple-touch-icon" href="~/images/favicon/apple-touch-icon-152x152.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon/favicon-32x32.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- BEGIN: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/vendors/vendors.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendors/flag-icon/css/flag-icon.min.css">
    <!-- END: VENDOR CSS-->
    <link rel="stylesheet" type="text/css" href="~/css-rtl/style-rtl.min.css">
    <!-- BEGIN: Page Level CSS-->
    <link rel="stylesheet" type="text/css" href="~/css-rtl/themes/vertical-dark-menu-template/materialize.min.css">
    <link rel="stylesheet" type="text/css" href="~/css-rtl/themes/vertical-dark-menu-template/style.min.css">
    <!-- END: Page Level CSS-->
    <!-- BEGIN: Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/css-rtl/custom/custom.css">
    <!-- END: Custom CSS-->
}
<div class="row">
    <div class="col s12">
        <div id="html-validations" class="card card-tabs">
            <div class="card-content">
                <div class="card-title">
                    <div class="row">
                        <div class="col s12 m6 l10">
                            <h4 class="card-title">ثبت فهرست اصلی HTML</h4>
                        </div>
                        <div class="col s12 m6 l2">
                        </div>
                    </div>
                </div>
                <div id="html-view-validations">
                    <form asp-action="create" asp-controller="Category"  class="formValidate0" id="formValidate0" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="input-field col s12">
                                <label for="uname0">نام*</label>
                                <input class="validate" required id="uname0" name="Name" type="text">
                            </div>
                            <label>سردسته را انتخاب کنید</label>
                            <select class="browser-default iransans" name="ParentId" >
                                <option value="" disabled selected>گزینه خود را انتخاب کنید</option>
                                                        
                                @foreach (var item in ViewBag.CategoryViewBag)
                                                        
                                {
                                    if (item.ParentId==0)
                                    {
                                    <option value="@item.Id">@item.Name</option>
                                    }                       
                                }
                                                        
                                                        
                            </select>

                            <div class="input-field col s12">
                                <button  href="@Url.Action("create","Category")" class="btn waves-effect waves-light right iransans" type="submit" name="action">ارسال
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
 <!-- Highlight Table -->
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <div id="highlight-table" class="card card card-default scrollspy">
                                    <div class="card-content">
                                        <h4 class="card-title">جدول دسته ها</h4>
                                        <div class="row">
                                            <div class="col s12">
                                            </div>
                                            <div class="col s12">
                                                <table class="highlight">
                                                    <thead>
                                                    <tr>
                                                        <th data-field="id">ایدی دسته</th>
                                                        <th data-field="id">نام سر دسته</th>
                                                        <th data-field="name">نام زیر دسته</th>
                                                        <th data-field="price">ایدی زیر دسته</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    @foreach (var item in ViewBag.CategoryViewBag)
                                                    {
                                                        <tr>
                                                            @if (item.ParentId==0)
                                                            {
                                                                <td>@item.Id</td>
                                                                <td>@item.Name</td>
                                                                <td>
                                                                @foreach (var item2 in ViewBag.CategoryViewBag)
                                                                {
                                                                    if (item2.ParentId==item.Id)
                                                                    {
                                                                        @item2.Name @item2.Id<br/>
                                                                    }
                                                                }
                                                                </td>
                                                            }
                                                        </tr>
                                                    }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
@section script{
<!-- BEGIN VENDOR JS-->
    <script src="~/js/vendors.min.js"></script>
    <!-- BEGIN VENDOR JS-->
    <!-- BEGIN PAGE VENDOR JS-->
    <script src="~/vendors/jquery-validation/jquery.validate.min.js"></script>
    <!-- END PAGE VENDOR JS-->
    <!-- BEGIN THEME  JS-->
    <script src="~/js/plugins.min.js"></script>
    <script src="~/js/search.min.js"></script>
    <script src="~/js-rtl/custom/custom-script-rtl.min.js"></script>
    <script src="~/js/scripts/customizer.min.js"></script>
    <!-- END THEME  JS-->
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="~/js/scripts/form-validation.js"></script>
    <!-- END PAGE LEVEL JS-->
}