<!-- Highlight Table -->
<div class="row">
    <div class="col s12 m12 l12">
        <div id="highlight-table" class="card card card-default scrollspy">
            <div class="card-content">
                <h4 class="card-title">جدول سفارش ها</h4>
                <div class="row">
                    <div class="col s12">
                    </div>
                    <div class="col s12">
                        <table class="highlight">
                            <thead>
                            <tr>
                                <th data-field="id">شماره سفارش</th>
                                <th data-field="name">نام کاربر</th>
                                <th data-field="name">ایدی دارو</th>
                                <th data-field="name">نام دارو</th>
                                <th data-field="name">قیمت دارو</th>
                                <th data-field="name">تعداد دارو</th>
                                <th data-field="name">قیمت کل هر دارو</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.UserName</td>
                                    <td>@item.DragId</td>
                                    <td>@item.DragName</td>
                                    <td>@item.Price</td>
                                    <td>@item.Count</td>
                                    <td>@item.TotalPrice تومان</td>
                                </tr>
                            }
                            <tr>
                                <td>جمع کل</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                @Model.Sum(s => s.TotalPrice) تومان
                                </td> 
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

