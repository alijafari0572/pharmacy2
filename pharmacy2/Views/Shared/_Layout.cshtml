                                            </a>
                                        </figure>
                                        <a asp-action="RemoveDragBasket" asp-controller="Order" asp-route-DragId="@Drag.Id" class="btn-remove" title="حذف محصول"><i class="icon-close"></i></a>
                                    </div><!-- End .product -->
                                    }

                                </div><!-- End .cart-product -->
                                @{
